</head>
<body>
    
    <%- include('_header.ejs') %>

    <%- body %>

    <%- include('_footer.ejs') %>

    <%- script %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        <% if(flash.success && flash.success.length> 0) {%>
           new Noty({
               theme:'metroui',
               text:"<%=flash.success%>",
               type:'success',
               layout:'topRight',
               timeout:1500

           }).show();
<%} %>
<% if(flash.error && flash.error.length> 0) {%>
           new Noty({
               theme:'metroui',
               text:"<%=flash.error%>",
               type:'error',
               layout:'topRight',
               timeout:1500

           }).show();
<%} %>
 </script>
</body>
</html>